<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppCompatTheme" parent="@style/AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <!--title datasage color-->
        <item name="android:textColorPrimary">@android:color/background_dark</item>
        <!--dialog background-->
        <item name="android:windowBackground">@android:color/white</item>
    </style>



    <!--CIRCULAR PROGRESS BAR-->
    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <!--POP UP STYLE-->
    <style name="MyPopUpMenu" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <!--TOOLBAR STYLE TEXT AND CONTROLS-->
    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- Color of Toolbar Font Color -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- Color of Toolbar Action Buttons -->
        <item name="colorControlNormal">@android:color/white</item>
        <!-- <item name="colorControlHighlight">@android:color/black</item> -->
    </style>




    <!--BLACK-->

    <style name="black_16">
        <item name="android:textColor">@android:color/black</item>
